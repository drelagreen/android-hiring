<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_gray</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/secondary_gray</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AgeDropdown.Item" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ems">4</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AgeDropdown.Item.Selected" parent="AgeDropdown.Item">
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>